{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Alle Services starten",
            "configurations": [
                "Backend starten",
                "Frontend starten"
            ]
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Backend starten",
            "program": "${workspaceFolder}/backend/server.js",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3000",
                "MAS_SERVICE_URL": "http://192.168.0.206:3002",
                "FRONTEND_URL": "http://localhost:5173",
                "UPLOADS_DIR": "${workspaceFolder}/uploads",
                "MODELS_DIR": "${workspaceFolder}/models",
                "SCRIPT_DIR": "${workspaceFolder}/scripts"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Frontend starten",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "env": {
                "VITE_API_URL": "http://localhost:3001/api"
            }
        }
    ]
}